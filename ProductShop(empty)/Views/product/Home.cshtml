@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Список продуктов</h1>
    <div>
        <input type="button" id="reloadProductsList" value="Все продукты" />
        <label>Имя продукта: <input type="text" id="requiredProductName" /></label>
        <input type="button" id="getProductByName" value="Поиск" />

    </div>
    <table border="1" id="productsTable" class="countLines">
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Цена</th>
        </tr>
    </table>
    <p id="errorMessage" class="errorMessage"></p>
    <div>
        <p>
            Фильтр по категории :
            <select size="1" id="ProductCategory" name="ProductCategory"></select>
        </p>

    </div>
    <div>
        <a href="AddProductView" class="btnAdd">Добавить продукт</a>
    </div>

</div>
<script src="~/Scripts/ProductScripts/ProductList.js"></script>






