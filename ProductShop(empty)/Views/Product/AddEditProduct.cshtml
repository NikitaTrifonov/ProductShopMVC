@model ProductShop_empty_.Models.Products.ProductForEdit
@using Newtonsoft.Json
@{
    ViewBag.Title = Model.Data == null ? "Добавление продукта" : "Редактирование продукта";
}

@section scripts{
    <script>
        var product = @Html.Raw(JsonConvert.SerializeObject(Model));
    </script>
}

<h2>@ViewBag.Title</h2>
<div>
    <table>
        <tr hidden>
            <td>Id:</td>
            <td><input id="inputId" hidden /></td>
        </tr>
        <tr>
            <td>
                Название
            </td>
            <td>
                <input id="inputName" onkeyup="checkParams()" placeholder="Название" />
            </td>
        </tr>
        <tr>
            <td>
                Категория       
            </td>
            <td>
                <select size="1" id="ProductCategory" name="ProductCategory"> </select>
            </td>
        </tr>
        <tr>
            <td>
                Цена
            </td>
            <td>
                <input id="inputPrice" type="number" min="0" step="0.01" placeholder="0.00" onkeyup="checkParams()" oninput="limitDecimal(this)" />
            </td>
        </tr>
    </table>
</div>
<div>
    <div class="buttonBox">
        <a id="submitButton" class="btnFunc"></a>
        <a class="btnFunc" href="~/Product/ProductList">К списку</a>
    </div>
    <p id="errorMessage"></p>
    <p id="statusMessage"></p>
</div>
<script src="~/Scripts/ProductScripts/AddEditProduct.js"></script>

